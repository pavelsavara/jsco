{
    "compilerOptions": {
        "noImplicitAny": true,
        "noEmitOnError": true,
        "removeComments": false,
        "module": "ES2022",
        "sourceMap": true,
        "target": "ES2022",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "strict": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ],
        "rootDirs": [
            "src"
        ]
    },
    "include": [
        "src/**/*",
        "src/.types.d.ts",
        "hello/**/*.ts", 
        "zoo/**/*.ts", 
        "tests/*.ts", 
        "tests/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}